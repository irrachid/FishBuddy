<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".DetailsLayoutBinding"/>

    <com.example.mayankrai.fishbuddy.utility.maps.DetailsLayout
        android:id="@+id/bali_details_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/default_layout_margin_halved"
            app:cardBackgroundColor="@color/white"
            android:layout_marginStart="@dimen/default_layout_margin_halved"
            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/headerImage"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/ic_mail_white_24dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_layout_margin"
                        android:text="MONKEY FOREST"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/textsize_very_huge"
                        android:textStyle="bold"
                        android:transitionName="titleTransition"/>

                    <LinearLayout
                        android:layout_below="@id/title"
                        android:id="@+id/descriptionLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/default_layout_margin"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/clock"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                            android:layout_marginStart="@dimen/default_layout_margin_quartered"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="08:30 - 18:00"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textsize_big" />

                        <ImageView
                            android:id="@+id/priceImage"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/priceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                            android:layout_marginStart="@dimen/default_layout_margin_quartered"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="40000"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textsize_big" />

                        <ImageView
                            android:id="@+id/scooter"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/circle" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/default_layout_margin_quartered"
                            android:layout_marginStart="@dimen/default_layout_margin_quartered"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:text="6 min"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/textsize_big" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="@dimen/default_layout_margin"
                        android:text="@string/incorrect_code_dialog_positive_button_text"
                        android:layout_below="@id/descriptionLayout"
                        android:textColor="@color/colorPrimary" />

                </RelativeLayout>
            </FrameLayout>



            <TextView
                android:id="@+id/takeMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/colorAccent"
                android:drawableStart="@drawable/circle"
                android:gravity="center"
                android:padding="@dimen/default_layout_margin"
                android:text="TAKE ME THERE"
                android:textColor="@color/white" />

        </android.support.v7.widget.CardView>

    </com.example.mayankrai.fishbuddy.utility.maps.DetailsLayout>

</layout>

